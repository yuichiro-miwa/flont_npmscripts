{
  "name": "flont_webpack",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 2",
    "serve": "browser-sync start --server --serveStatic dist --files 'public/common/css/*.css, public/common/js/*.js, **/*.html'",
    "watch:js": "watchify --entry dev/common/js/main.js --transform babelify --outfile 'exorcist public/common/js/bundle.js.map > public/common/js/bundle.js' --debug --verbose",
    "browserify": "browserify --entry dev/common/js/main.js --transform babelify > public/common/js/bundle.js",
    "build:js": "mkdirp public/common/js && npm run browserify",
    "build:css": "postcss --config .postcssrc.json --dir public/common/css dev/common/pcss/**.pcss",
    "watch:css": "npm run build:css -- --watch --map",
    "lint:css": "stylelint 'dev/common/css/**'",
    "lint:js": "xo dev/common/js/**",
    "watch": "npm run serve && npm run watch:css && npm run watch:js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.3.0",
    "exorcist": "^0.4.0",
    "mkdirp": "^0.5.1",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^9.0.0",
    "stylelint": "^7.7.1",
    "stylelint-config-qiita": "^1.0.0",
    "watchify": "^3.8.0",
    "webpack": "^1.14.0",
    "xo": "^0.17.1"
  }
}
